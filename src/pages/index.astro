---
import Layout from "../layouts/Layout.astro";

import Introduction from '../components/Introduction';
import Flyout from "../components/Flyout";
import Counter from "../components/Counter";
import AnimatedCard from "../components/AnimatedCard";
import AnimatedFeatures from "../components/AnimatedFeatures";
import AnimatedModalFeatures from "../components/AnimatedModalFeatures";
import SpringAnimation from "../components/SpringAnimation";
import SplitText from "../components/Welcome"; // Renamed to reflect actual functionality
---

<Layout>
  <header class="fixed w-full z-50">
    <Flyout client:load />
  </header>

  <main class="min-h-screen">
    <!-- Hero Section -->
    <section id="hero" class="pt-16">
      <Introduction client:load />
    </section>

    <!-- Text Animation Demo -->
    <section id="text-animation" class="py-20 bg-white text-center">
      <div class="container mx-auto px-4">
        <h2 class="text-3xl font-bold mb-10">Text Animation</h2>
        <div class="max-w-2xl mx-auto">
          <SplitText
            text="Welcome to my animation showcase! I am a full-stack developer."
            className="text-2xl font-semibold text-gray-800"
            onLetterAnimationComplete={() => {}}
            client:load
          />
        </div>
      </div>
    </section>

    <!-- Basic Animations Demo -->
    <section id="basic-animations" class="py-20 bg-gray-50">
      <div class="container mx-auto px-4">
        <h2 class="text-3xl font-bold text-center mb-12">
          Basic Animation Examples
        </h2>
        <div class="grid md:grid-cols-2 gap-8">
          <div class="bg-white p-6 rounded-xl shadow-md">
            <h3 class="text-xl font-semibold mb-4">React State Counter</h3>
            <Counter client:load />
          </div>
          <div class="bg-white p-6 rounded-xl shadow-md">
            <h3 class="text-xl font-semibold mb-4">React Spring Animation</h3>
            <SpringAnimation client:load />
          </div>
        </div>
      </div>
    </section>

    <!-- Framer Motion Cards -->
    <section id="framer-motion" class="py-20 bg-white">
      <div class="container mx-auto px-4">
        <h2 class="text-3xl font-bold text-center mb-12">
          Framer Motion Animations
        </h2>
        <AnimatedCard client:load />
      </div>
    </section>

    <!-- Animated Features Section -->
    <section id="features" class="py-20 bg-gradient-to-b from-gray-50 to-white">
      <AnimatedFeatures client:load />
    </section>

    <!-- Modal Demo -->
    <section id="modals" class="py-20 bg-white">
      <div class="container mx-auto px-4">
        <h2 class="text-3xl font-bold text-center mb-12">Interactive Modal Animations</h2>
        <p class="text-center text-gray-600 max-w-2xl mx-auto mb-12">
          Click on any feature card below to open an animated modal with additional information.
        </p>
        <AnimatedModalFeatures client:load />
      </div>
    </section>
  </main>

  <footer class="bg-gray-900 text-white py-12">
    <div class="container mx-auto px-4 text-center">
      <p class="mb-4">Created with Astro, React, Framer Motion and React Spring</p>
      <div class="flex justify-center gap-4">
        <a href="#" class="text-gray-400 hover:text-white transition">GitHub</a>
        <a href="#" class="text-gray-400 hover:text-white transition">Twitter</a>
        <a href="#" class="text-gray-400 hover:text-white transition">LinkedIn</a>
      </div>
    </div>
  </footer>
</Layout>
